# AssistedDiscovery Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars

# Database - MySQL (Current)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=assisted_discovery
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=assisted_discovery

# Database - CouchDB (Future)
COUCHDB_HOST=localhost
COUCHDB_PORT=5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=your_couchdb_password
COUCHDB_DATABASE=assisted_discovery

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# LLM Configuration - Azure OpenAI
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2025-01-01-preview
MODEL_DEPLOYMENT_NAME=gpt-4o
FALLBACK_MODEL_DEPLOYMENT_NAME=gpt-4o-mini
MAX_TOKENS_PER_REQUEST=4000
LLM_TEMPERATURE=0.0
LLM_TOP_P=0.0

# XML Processing
MAX_XML_SIZE_MB=100
MAX_SUBTREE_SIZE_KB=4
MICRO_BATCH_SIZE=6

# Pattern Discovery
PATTERN_CONFIDENCE_THRESHOLD=0.7
TOP_K_CANDIDATES=5

# Retry Configuration
MAX_LLM_RETRIES=3
MAX_DB_RETRIES=5
RETRY_BACKOFF_FACTOR=2.0

# Security
PII_MASKING_ENABLED=true
MAX_SNIPPET_LENGTH=120

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# CORS - Add your Streamlit URLs
ALLOWED_ORIGINS=["http://localhost:8501", "http://127.0.0.1:8501"]