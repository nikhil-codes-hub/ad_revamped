{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AD üöÄ Start FastAPI Backend",
            "type": "shell",
            "command": "python",
            "args": ["-m", "app.main"],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend",
                    "DEBUG": "true"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "AD üéØ Start Streamlit Frontend",
            "type": "shell",
            "command": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/frontend/streamlit_ui/AssistedDiscovery.py",
                "--server.port",
                "8501",
                "--browser.gatherUsageStats",
                "false"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "AD üî• Start Uvicorn with Hot Reload",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--reload",
                "--log-level", "debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend",
                    "DEBUG": "true"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "AD üß™ Run All Tests",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "tests/", "-v", "--tb=short"],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "AD üß™ Run Unit Tests Only",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "tests/unit/", "-v", "--tb=short"],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "AD üß™ Run Integration Tests Only",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "tests/integration/", "-v", "--tb=short"],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "AD üìä Run Tests with Coverage Report",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "pytest",
                "tests/unit/",
                "--cov=app",
                "--cov-report=term",
                "--cov-report=html",
                "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "AD üìä Open Coverage HTML Report",
            "type": "shell",
            "command": "open",
            "args": ["htmlcov/index.html"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "AD ‚èÆÔ∏è Re-run Failed Tests",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "--lf", "-v", "--tb=short"],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "AD üßπ Clean Test Cache",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", ".pytest_cache", "__pycache__", "htmlcov", ".coverage"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "AD üîç Install Dependencies (Backend)",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "AD üóÑÔ∏è Reset Database",
            "type": "shell",
            "command": "python",
            "args": ["-c", "from app.services.database import reset_database; reset_database()"],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend"
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}